{
    "$schema": "http://json-schema.org/schema#",

    "title": "mindbender-core:config-1.0",
    "description": "A project configuration",

    "type": "object",

    "additionalProperties": true,

    "properties": {
        "schema": {
            "description": "Schema identifier for payload",
            "type": "string"
        },
        "apps": {
            "description": "Readily available application.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": ""
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "tasks": {
            "description": "Available task.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": ""
                },
                "label": {
                    "type": "string",
                    "description": ""
                }
            }
        },
        "template": {
            "description": "Templates for directory layouts",
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "oneOf": [
                        {"type": "string"},
                        {"type": "null"}
                    ]
                }
            },
            "additionalProperties": false
        }
    }
}
